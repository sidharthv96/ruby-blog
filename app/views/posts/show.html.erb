<h2>
  <%= @post.title %>
</h2>
<hr/>
<p>
  <%= @post.text %>
</p>

<%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-primary" %> 

<br>
<h3>Comments (<%= @post.comments.length %>)</h3>
<ul>
<%= render @post.comments %>
</ul>

<h4>Add a comment:</h4>
<%= render 'comments/form' %>

<%= link_to 'Back', posts_path, :class => "btn btn-primary" %> 
